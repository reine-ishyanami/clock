<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reine.clock.HelloController">
    <center>
        <Label fx:id="timeLabel" alignment="CENTER" text="00:00:00.000" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font size="50.0" />
            </font>
        </Label>
    </center>
    <opaqueInsets>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </opaqueInsets>
    <padding>
        <Insets bottom="30.0" />
    </padding>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#refreshTime" text="刷新">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#stopTime" text="暂停" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
